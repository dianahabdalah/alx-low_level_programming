#include "main.h"

/**
 * print_binary - prints the binary equivalent of a decimal number
 * @num: the decimal number to print in binary
 **/
void print_binary(unsigned long int num)
{
        int bit, count = 0;
        unsigned long int current;

        for (bit = 63; bit >= 0; bit--)
        {
                current = num >> bit;

                if (current & 1)
                {
                        _putchar('1');
                        count++;
                }
                else if (count)
                {
                        _putchar('0');
                }
        }

        if (!count)
        {
                _putchar('0');
        }
}
